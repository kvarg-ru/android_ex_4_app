<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_start"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="CREATE" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_create"
        app:layout_constraintLeft_toRightOf="@id/button_create"
        app:layout_constraintRight_toLeftOf="@id/button_cancel"
        android:text="START" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_create"
        app:layout_constraintLeft_toRightOf="@id/button_start"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:text="CANCEL" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="null" />

</android.support.constraint.ConstraintLayout>