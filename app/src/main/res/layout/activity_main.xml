<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spb.academy.android.ex_4_app.MainActivity">

    <Button
        android:id="@+id/button_asynctask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/colorGreen"
        android:text="ASYNCTASK ACTIVITY"
        app:layout_constraintBottom_toTopOf="@id/button_threads"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/button_threads"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_asynctask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:layout_margin="10dp"
        android:background="@color/colorPink"
        android:text="THREADS ACTIVITY" />

</android.support.constraint.ConstraintLayout>
